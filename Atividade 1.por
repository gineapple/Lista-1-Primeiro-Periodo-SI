programa
{
	funcao inicio()
	{
		real a, b, c, soma
		
		escreva("Digite o primeiro número: ")
		leia(a)

		escreva("Digite o segundo número: ")
		leia(b)

		escreva("Digite o terceiro número: ")
		leia(c)

		soma = a + b + c // Soma os três valores
		

		escreva("\nA soma dos números é igual a: ", soma) // Exibe o resultado da soma
	}
}
